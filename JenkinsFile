pipeline {
  agent {
    docker {
       image 'abhishekf5/maven-abhishek-docker-agent:v1'
       args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        git branch: 'master', url: 'https://github.com/Soumyahegdeh/helloworld.git'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        sh 'mvn clean package'
        archiveArtifacts artifacts: 'my-hello.jar', followSymlinks: false, onlyIfSuccessful: true
        echo "build and test done"
      }
    }
     
   }
   post {
        failure {
            emailext(
                to: 'soumyavin92@gmail.com',
                subject: "Build Failed: ${env.JOB_NAME} ${env.BUILD_NUMBER}",
                body: """
                <p>Build ${env.JOB_NAME} (${env.BUILD_NUMBER}) has failed.</p>
                <p>Check the build log at: ${env.BUILD_URL}</p>
                <p>Best regards,</p>
                <p>Your Jenkins Server</p>
                """
            )
        }
    }
  }
