pipeline {
  agent {
    docker {
       image 'abhishekf5/maven-abhishek-docker-agent:v1'
       args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        git branch: 'main', url: 'https://github.com/Soumyahegdeh/helloworld.git'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        sh 'cd boot-app && mvn clean package'
        echo "build and test done"
      }
    }
   stage('Build and Push Docker Image'){
              environment {
                DOCKER_IMAGE = "soumyahe/final-cicd:${BUILD_NUMBER}"
                REGISTRY_CREDENTIALS = credentials('docker-cred')
            }
            steps{
                script {
                  sh 'cd boot-app && docker build -t ${DOCKER_IMAGE} .'
                  echo "Image is built"
                  def dockerImage = docker.image("${DOCKER_IMAGE}")
                  docker.withRegistry('', "docker-cred") {
                  dockerImage.push()
                }
            }
          }
     }
     
   }
}
